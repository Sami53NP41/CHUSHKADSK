@model IEnumerable<ProductViewModel>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <title>CHUSHKA</title>
    @*<link rel="stylesheet" type="text/css" href="css/reset-css.css">*@
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/style.css">
</head>
<body>
    <form>
        <div class="container-fluid">
            <main class="mt-3 mb-5">
                <div class="container-fluid text-center">
                    <h2>Greetings, admin!</h2>
                    <h4>Enjoy your work today!</h4>
                </div>
                <hr class="hr-2 bg-dark" />
                <div class="container-fluid product-holder">
                    <div class="row d-flex justify-content">

                        @foreach (var item in @Model)
                        {

                            <div class="product col-md-3 chushka-bg-color rounded-top rounded-bottom">
                               
                                <div class="card" style="width: 18rem;>
                                <div class="card-body">
                                        <h5 class="card-title">@item.Name</h5>
                                        <p class="card-text">@item.Description</p>
                                        <p>Price of the product: @item.Price</p>
                                        <a asp-action="EditAdmin" asp-controller="Product" asp-route-id="@item.Id">edit product</a>
                                        <a asp-action="ProductsDetailsAdmin" asp-controller="Product" asp-route-id="@item.Id">Product details</a>
                                </div>
                               </div>
                        }
                        </div>
                    </div>
            </main>
            <footer>
                <div class="container-fluid chushka-bg-color">
                    <div class="text-white p-2 text-center">
                        &copy; CopyRight Sanity Web Design Studios 2018. All rights
                        reserved.
                    </div>
                </div>
            </footer>
        </div>
    </form>
</body>
</html>